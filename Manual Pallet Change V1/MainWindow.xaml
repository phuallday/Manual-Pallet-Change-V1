<mah:MetroWindow xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                 x:Name="metroWindow"
                 x:Class="s7dotnet.MainWindow"
                 Title="Pallet Change Manual Control"
                 Width="714.333"
                 Height="458"
                 WindowStartupLocation="CenterScreen"
                 mc:Ignorable="d"
                 Loaded="metroWindow_Loaded"
                 WindowStyle="ToolWindow"
                 ResizeMode="NoResize"
                 Icon="transfer.png">
    <Window.Resources>
        <ResourceDictionary>
            <Ellipse x:Key="AppThemeMenuIcon"
                     Width="16"
                     Height="16"
                     x:Shared="False"
                     Fill="{Binding ColorBrush, Mode=OneWay}"
                     Stroke="{Binding BorderColorBrush, Mode=OneWay}"
                     StrokeThickness="1" />
            <Ellipse x:Key="AccentMenuIcon"
                     Width="16"
                     Height="16"
                     x:Shared="False"
                     Fill="{Binding ColorBrush, Mode=OneWay}" />

            <Style x:Key="AppThemeMenuItemStyle"
                   BasedOn="{StaticResource MahApps.Styles.MenuItem}"
                   TargetType="{x:Type MenuItem}">
                <Setter Property="Command"
                        Value="{Binding ChangeAccentCommand}" />
                <Setter Property="Header"
                        Value="{Binding Name, Mode=OneWay}" />
                <Setter Property="Icon"
                        Value="{StaticResource AppThemeMenuIcon}" />
            </Style>

            <Style x:Key="AccentColorMenuItemStyle"
                   BasedOn="{StaticResource MahApps.Styles.MenuItem}"
                   TargetType="{x:Type MenuItem}">
                <Setter Property="Command"
                        Value="{Binding ChangeAccentCommand}" />
                <Setter Property="Header"
                        Value="{Binding Name, Mode=OneWay}" />
                <Setter Property="Icon"
                        Value="{StaticResource AccentMenuIcon}" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <mah:MetroWindow.Flyouts>
        <mah:FlyoutsControl>
            <mah:Flyout x:Name="firstFlyout"
                        Header="Theme Setting"
                        Position="Right">
                <!-- Your custom content here -->
                <Menu>
                    <MenuItem x:Name="menu_theme"
                              Header="Theme"
                              ItemContainerStyle="{StaticResource AppThemeMenuItemStyle}" />


                    <MenuItem x:Name="menu_Accent"
                              Header="Accent"
                              ItemContainerStyle="{StaticResource AccentColorMenuItemStyle}" />


                </Menu>
            </mah:Flyout>
        </mah:FlyoutsControl>
    </mah:MetroWindow.Flyouts>
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button x:Name="btn_Setting"
                    Click="btn_Setting_Click"
                    Content="Theme Setting">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconModern Width="22"
                                                      Height="22"
                                                      VerticalAlignment="Center"
                                                      Kind="Settings" />
                            <TextBlock Margin="4 0 0 0"
                                       VerticalAlignment="Center"
                                       Text="{Binding}" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>
    <Grid>
        <Grid x:Name="gird_Control"
              Visibility="Visible"
              IsEnabled="False">
            <GroupBox x:Name="groupBox_Mode"
                      Header="GroupBox Mode"
                      HorizontalAlignment="Left"
                      Height="104"
                      Margin="10,10,0,0"
                      VerticalAlignment="Top"
                      Width="153">
                <mah:ToggleSwitch PreviewMouseDown="btn_Toggled"
                                  x:Name="btn_manual"
                                  Header="Auto/Manual"
                                  OffContent="Auto"
                                  OnContent="Manual"
                                  VerticalAlignment="Top"
                                  HorizontalAlignment="Left" />
            </GroupBox>
            <GroupBox x:Name="groupBox_InsideMC"
